<Window x:Class="QuotaConverterWPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Quota converter" Height="180" Width="680">
    <Window.Background>
        <LinearGradientBrush ColorInterpolationMode="SRgbLinearInterpolation" MappingMode="RelativeToBoundingBox" SpreadMethod="Pad">
            <GradientStop Color="Coral" Offset="0.2"/>
            <GradientStop Color="Orange" Offset="0.4"/>
            <GradientStop Color="AliceBlue" Offset="0.6"/>
            <GradientStop Color="OldLace" Offset="0.7"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <Label Height="28" Name="label1" VerticalAlignment="Top" HorizontalAlignment="Left" Width="212">Enter quota to be converted (in PLN):</Label>
        <TextBox Name="NumQuotaString" Margin="211,2,0,0" Height="23" VerticalAlignment="Top" HorizontalAlignment="Left" Width="116" TextChanged="NumQuotaString_TextChanged" Opacity="0.7" />
        <TextBox Margin="0,40,0,0" Name="QuotaText" Opacity="0.7"/>
    </Grid>
</Window>
